doctype 
html 
    head 
        <meta name="viewport" content="width=device-width, initial-scale=1">
        title 
            |Infiniters
        style 
            include ../static/signup.css
    body 
        nav.bn.nav
            <i class="fas fa-space-shuttle"></i>
            ul.bn 
               li #[a(href="/" class="navli" id="home") Home]
                li #[a(href="/about" class="navli" id="about") About]
                li #[a(href="/contact" class="navli" id="contact") ContactUs] 
                li #[a(href="/signup" class="navli" id="signup") Signup]
            <i class="fas fa-bars" id="hamburger"></i>
            <i class="fas fa-times" id="cross"></i>

        form.bn(action='/signup',method='post' class="form")
            input#name(type="text",name="name" placeholder="Enter your name") 
            input#email(type="email",name="email_id" placeholder="Enter your email id") 
            input#password(type="password",name="password" placeholder="Set your password") 
            input#phone_no(type="number",name="phone_no" placeholder="Enter your phone number") 
            button.bn(class="btn")
                |Submit  
